<div class="d-flex" style="width:30rem">
	<div class="realtor-card d-flex col-sm-6">
		<div class="image-container">
			<NavLink class="card-img-top" href="@GetLinkRealtor()">
				<img src="@realEstate.RealtorPicture" height="50" />
			</NavLink>
		</div>
		<div class="realtor-details ms-3">
			<h5>
				Mäklare
			</h5>
			<p>@realEstate.RealtorFullName</p>
			@* <p>
				<i class="fa-solid fa-phone" aria-hidden="true" title="@realEstate.RealtorPhoneNumber" href="tel:@realEstate.RealtorPhoneNumber"></i>
				<a div="" title="@realEstate.RealtorEmail" href="mailto:@realEstate.RealtorEmail"><i class="fa-solid fa-envelope" aria-hidden="true"></i></a>
			</p>	 *@		
		</div>
	</div>
	<div class="realtor-card d-flex col-sm-6 ">
		<div class="image-container">
			<NavLink class="card-img-top" href="@GetLinkAgency()">
				<img src="@realEstate.AgencyLogo" height="50" />
			</NavLink>
		</div>
		<div class="realtor-details ms-3">
			<h5>
				Mäklarbyrå
			</h5>
			<p>@realEstate.AgencyName</p>
		</div>
	</div>
</div>

@code {
	[Parameter] public PropertyForSaleDetailsDTO realEstate { get; set; }
	public string linkId { get; set; }
	private string GetLinkAgency()
	{
		linkId = $"/agency/details/{realEstate.AgencyId}";
		return linkId;
	}
	private string GetLinkRealtor()
	{
		linkId = $"/realtor/details/{realEstate.RealtorId}";
		return linkId;
	}
}
