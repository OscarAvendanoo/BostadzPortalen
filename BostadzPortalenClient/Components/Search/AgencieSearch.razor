@using BostadzPortalenClient.Components
<!--Author: Kevin-->

<div id="agencies" class="tab-content">
    <div class="row g-12">
        
        <div class="col-md-12 mt-3">
            <label class="form-label">Plats</label>
            <input type="text" class="form-control" placeholder="Ange område, t.ex. Stockholm">
        </div>
        <div class="col-md-12 mt-3">
            <RealEstateAgencyDropdown OnSelectedAgencyChanged="HandleAgencySelection" />
        </div>
        <div class="col-12 d-flex justify-content-center mt-4">
            <button class="btn main-btn w-50">Sök</button>
        </div>
    </div>
</div>


@code {
    private int? selectedAgencyId;

    private void HandleAgencySelection(int? agencyId)
    {
        selectedAgencyId = agencyId;
        Console.WriteLine($"Vald byrå-ID: {agencyId}");
    }

}

