@using BostadzPortalenClient.DTO
@if (propertyList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th> Kommun </th>
                <th> Adress </th>
                <th> Pris </th>
                <th> Hyra </th>
                <th> Typ av bostad </th>
                <th> Bostads area </th>
                <th> Utomhus area </th>
                <th> Antal rum </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in propertyList)
            {
                <tr>
                    <td> @item.MunicipalityName </td>
                    <td> @item.Address </td>
                    <td> <DecimalToStringSEK inputDecimal="@item.AskingPrice"></DecimalToStringSEK> </td>
                    <td> <DecimalToStringSEK inputDecimal="@item.MonthlyFee"></DecimalToStringSEK> </td>
                    <td> @item.TypeOfProperty </td>
                    <td> <IntToString_m2 inputInt="@item.LivingArea"></IntToString_m2> </td>
                    <td> <IntToString_m2 inputInt="@item.PlotArea"></IntToString_m2> </td>
                    <td> @item.NumberOfRooms </td>
                </tr>
            }
        </tbody>
    </table>
}



@code {
	[Parameter] public List<PropertyForSaleOverviewDTO> propertyList { get; set; }
}
