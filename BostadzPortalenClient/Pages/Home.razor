@page "/"
@using BlazorBootstrap
@using BostadzPortalenClient.Pages.Search
@inject IPropertyForSaleService propService

<PageTitle>Home</PageTitle>

<div class="d-flex align-items-center">
	<SearchBox />

	@if(Images == null)
	{
		<p>Laddar bilder...</p>
	}
	else
	{
		<div class="d-flex justify-content-center align-items-center col-6" width="500px">
			<Carousel>
				<CarouselItem Active="true">
					<Image src="@Images.First().ImageUrl.ToString()" />
				</CarouselItem>
				@foreach (var picture in Images.Skip(1))
				{
					<CarouselItem>
						<Image src="@picture.ImageUrl" />
					</CarouselItem>
				}
			</Carousel>
		</div>
	}

